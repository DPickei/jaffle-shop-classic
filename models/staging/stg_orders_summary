-- models/orders_summary.sql

{#-
This model aggregates order data to provide summary statistics per customer.
It calculates the total number of orders, total order amount, and average order value.
#}

with source as (

    {#-
    Select raw order data from the staging orders model.
    #}
    select * from {{ ref('stg_orders') }}

),

aggregated_orders as (

    {#-
    Aggregate order data to compute total orders, total amount, and average order value per customer.
    #}
    select
        customer_id,
        count(order_id) as total_orders,
        sum(amount) as total_amount,
        avg(amount) as avg_order_value
    from source
    group by customer_id

)

select
    customer_id,
    total_orders,
    total_amount,
    avg_order_value
from aggregated_orders
